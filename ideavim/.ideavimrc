""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set multiple-cursors
set commentary
set argtextobj
set exchange
set textobj-entire
set ReplaceWithRegister
set highlightedyank
set NERDTree

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>,{:}"

""" Common settings -------------------------
set showmode
set scrolloff=5
set relativenumber
set number
set ignorecase
set smartcase

""" Idea specific settings ------------------
set ideajoin
set idearefactormode=select

""" Mappings --------------------------------
""map <leader>f <Plug>(easymotion-s)
""map <leader>e <Plug>(easymotion-f)

noremap <leader>t :action RunClass<cr>
noremap <leader>T :action RerunFailedTests<cr>

""map <leader>d :action Debug<cr>
noremap <leader>d :action DebugClass<cr>
noremap <leader>r :action RenameElement<cr>
noremap <leader>c :action Stop<cr>
noremap <leader>z :action ToggleDistractionFreeMode<cr>

noremap <leader>s :action SelectInProjectView<cr>
noremap <leader>a :action Annotate<cr>
noremap <leader>h :action Vcs.ShowTabbedFileHistory<cr>
noremap <S-Space> :action GotoNextError<cr>

noremap <leader>b :action ToggleLineBreakpoint<cr>
noremap <leader>o :action FileStructurePopup<cr>

""" JetBeans actions ------------------------
nnoremap [c :action VcsShowPrevChangeMarker<cr>
nnoremap ]c :action VcsShowNextChangeMarker<cr>
nnoremap [d :action GotoImplementation<cr>
nnoremap ]d :action GotoSuperMethod<cr>

vnoremap [v :action EditorUnSelectWord<cr>
vnoremap ]v :action EditorSelectWord<cr>

"  Fix for Idea jumps not populating vim jumplist
nnoremap <C-o> :action Back<cr>
nnoremap <C-i> :action Forward<cr>

nnoremap <leader>f :action GotoClass<cr>

""" Personal bindings -----------------------
"   Add some movement to insertmode
inoremap <M-k> <Up>
inoremap <M-j> <Down>
inoremap <M-l> <Right>
inoremap <M-h> <Left>

"   Jetpack bind, a bit buggy here though
" nnoremap <leader>l :ls <CR> :b <space>
noremap <leader>p "0p
noremap <leader>P "+p
"   CamelCase to snake_case
noremap <leader>u :s/\(\u\)/_\l\1/g<cr>
"   snake_case to CamelCase
noremap <leader>U :s/_\(\l\)/\u\1/g<cr>

""" unimpared -------------------------------
nnoremap [<space> :action EditorStartNewLineBefore<cr>
nnoremap ]<space> :action EditorStartNewLine<cr>
nnoremap [e :action MoveLineUp<cr>
nnoremap ]e :action MoveLineDown<cr>
nnoremap [b :action PreviousTab<cr>
nnoremap ]b :action NextTab<cr>
nnoremap [B :action GoToTab1<cr>
nnoremap ]B :action GoToLastTab<cr>
